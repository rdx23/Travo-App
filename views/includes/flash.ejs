<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 rounded-3 mt-2" role="alert">
    <p class="m-0"><%= error %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>




<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 rounded-3 mt-2" role="alert">
    <p class="m-0"><%= success %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>



